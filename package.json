{
  "name": "amazon-ads-sdk",
  "version": "1.0.0",
  "description": "Amazon Advertising API SDK for Node.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "generate": "openapi-generator-cli generate -i ./specs/sponsored-products.json -g typescript-axios -o ./src/generated/sponsored-products --skip-validate-spec",
    "build": "tsc",
    "test": "jest --watchAll=false",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:single": "jest -t --watchAll=false",
    "test:file": "jest --testPathPattern --watchAll=false",
    "test:integration": "NODE_ENV=test jest -c jest.config.js src/modules/__tests__/profiles.test.ts --testTimeout=30000 --watchAll=false",
    "prepare": "npm run build"
  },
  "keywords": [
    "amazon",
    "advertising",
    "api",
    "sdk",
    "sponsored-products"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.19.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "axios": "^1.8.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "dotenv": "^16.5.0"
  }
}
